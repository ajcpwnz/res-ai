generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id           String         @id @default(cuid())
  type         PropertyType
  address      Address?
  stage        String         @default("")
  PropertyMeta PropertyMeta[]
  LookupResult LookupResult[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model PropertyMeta {
  id         String   @id @default(cuid())
  property   Property @relation(fields: [propertyId], references: [id])
  propertyId String
  key        String
  value      String?
  json       Json?    @db.JsonB

  @@unique([propertyId, key])
  @@index([propertyId, key])
}

model LookupResult {
  id         String   @id @default(cuid())
  property   Property @relation(fields: [propertyId], references: [id])
  propertyId String
  resultType String
  input      String?
  json       Json     @db.JsonB
}

model Address {
  id          String   @id @default(cuid())
  propertyId  String   @unique
  fullAddress String
  property    Property @relation(fields: [propertyId], references: [id])
}

model SystemSetting {
  key   String @unique
  value Json
}

enum PropertyType {
  Residential
  MultiFamily
}
